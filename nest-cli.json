{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "webpack"
    },
    "plugins": ["@nestjs/swagger"]
  },
  "monorepo": true,
  "projects": {
    "booking-worker": {
      "type": "application",
      "root": "apps/booking-worker",
      "entryFile": "main",
      "sourceRoot": "apps/booking-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/booking-worker/tsconfig.app.json"
      }
    },
    "booking-api": {
      "type": "application",
      "root": "apps/booking-api",
      "entryFile": "main",
      "sourceRoot": "apps/booking-api/src",
      "compilerOptions": {
        "assets": ["./migrations/*.{ts,js}"],
        "tsConfigPath": "apps/booking-api/tsconfig.app.json"
      }
    }
  }
}

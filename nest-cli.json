{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "webpack"
    },
    "plugins": ["@nestjs/swagger"]
  },
  "monorepo": true,
  "projects": {
    "bootstrap": {
      "type": "library",
      "root": "libs/bootstrap",
      "entryFile": "index",
      "sourceRoot": "libs/bootstrap/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bootstrap/tsconfig.lib.json"
      }
    },
    "configuration": {
      "type": "library",
      "root": "libs/configuration",
      "entryFile": "index",
      "sourceRoot": "libs/configuration/src",
      "compilerOptions": {
        "tsConfigPath": "libs/configuration/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "booking-worker": {
      "type": "application",
      "root": "apps/booking-worker",
      "entryFile": "main",
      "sourceRoot": "apps/booking-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/booking-worker/tsconfig.app.json"
      }
    },
    "booking-api": {
      "type": "application",
      "root": "apps/booking-api",
      "entryFile": "main",
      "sourceRoot": "apps/booking-api/src",
      "compilerOptions": {
        "assets": ["./migrations/*.{ts,js}"],
        "tsConfigPath": "apps/booking-api/tsconfig.app.json"
      }
    }
  }
}
